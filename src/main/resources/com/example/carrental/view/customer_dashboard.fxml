<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.carrental.controller.CustomerDashboardController"
            stylesheets="@styles/style_2.css"
            styleClass="dashboard-root">

    <!-- ======= TOP (HEADER) ======= -->
    <top>
        <VBox spacing="15" styleClass="dashboard-header">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Text text="Car Rental System" styleClass="dashboard-title"/>
                    <Text text="Customer Dashboard"
                          style="-fx-fill: #e3f2fd; -fx-font-size: 14px;"/>
                </VBox>

                <Label fx:id="welcomeLabel"
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="ðŸšª Logout"
                        onAction="#handleLogout"
                        styleClass="danger-button"/>
            </HBox>

            <!-- Quick info bar -->
            <HBox spacing="30" alignment="CENTER">
                <HBox spacing="10" alignment="CENTER">
                    <Label text="ðŸŽ¯" style="-fx-font-size: 16px;"/>
                    <Label text="Find &amp; Rent Your Dream Car"
                           style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </HBox>
        </VBox>
    </top>

    <!-- ======= CENTER (TABS) ======= -->
    <center>
        <TabPane>
            <tabs>

                <!-- === Tab 1: Available Cars === -->
                <Tab text="ðŸš— Available Cars" closable="false">
                    <content>
                        <VBox spacing="20">
                            <padding>
                                <Insets top="25" right="25" bottom="25" left="25"/>
                            </padding>

                            <!-- Search bar -->
                            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="card">
                                <padding>
                                    <Insets top="15" right="15" bottom="15" left="15"/>
                                </padding>

                                <VBox spacing="5">
                                    <Label text="Search &amp; Filter Cars"
                                           style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                                    <Label text="Find the perfect car for your needs"
                                           style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
                                </VBox>

                                <Region HBox.hgrow="ALWAYS"/>

                                <TextField fx:id="searchBrandField" promptText="Brand"
                                           style="-fx-pref-width: 120px; -fx-pref-height: 35px;"/>
                                <TextField fx:id="searchModelField" promptText="Model"
                                           style="-fx-pref-width: 120px; -fx-pref-height: 35px;"/>
                                <TextField fx:id="searchMaxPriceField" promptText="Max Price"
                                           style="-fx-pref-width: 100px; -fx-pref-height: 35px;"/>

                                <Button text="ðŸ” Search"
                                        onAction="#handleSearchCars"
                                        styleClass="primary-button"/>
                                <Button text="ðŸ”„ Show All"
                                        onAction="#handleShowAllCars"/>
                            </HBox>

                            <!-- Cars table -->
                            <VBox spacing="10" styleClass="card">
                                <padding>
                                    <Insets top="15" right="15" bottom="15" left="15"/>
                                </padding>

                                <Label text="Available Cars for Rent"
                                       style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

                                <TableView fx:id="carsTableView" VBox.vgrow="ALWAYS"
                                           style="-fx-max-height: 400;">
                                    <columns>
                                        <TableColumn text="ID" prefWidth="60">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="carId"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Brand" prefWidth="120">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="brand"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Model" prefWidth="120">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="model"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Year" prefWidth="80">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="year"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Color" prefWidth="100">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="color"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Price/Day" prefWidth="100">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="pricePerDay"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Available" prefWidth="80">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="available"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </VBox>
                        </VBox>
                    </content>
                </Tab>

                <!-- === Tab 2: My Reservations === -->
                <Tab text="ðŸ“‹ My Reservations" closable="false">
                    <content>
                        <VBox spacing="20">
                            <padding>
                                <Insets top="25" right="25" bottom="25" left="25"/>
                            </padding>

                            <VBox spacing="10" styleClass="card">
                                <padding>
                                    <Insets top="15" right="15" bottom="15" left="15"/>
                                </padding>

                                <Label text="My Booking History"
                                       style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                                <Label text="View and manage your current and past reservations"
                                       style="-fx-text-fill: #666; -fx-font-size: 12px;"/>

                                <TableView fx:id="reservationsTableView" VBox.vgrow="ALWAYS"
                                           style="-fx-max-height: 400;">
                                    <columns>
                                        <TableColumn text="Reservation ID" prefWidth="100">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="reservationId"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Car" prefWidth="150">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="car"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Start Date" prefWidth="100">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="startDate"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="End Date" prefWidth="100">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="endDate"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Total Price" prefWidth="100">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="totalPrice"/>
                                            </cellValueFactory>
                                        </TableColumn>

                                        <TableColumn text="Status" prefWidth="100">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="status"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </VBox>
                        </VBox>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </center>

    <!-- ======= BOTTOM (STATUS BAR) ======= -->
    <bottom>
        <HBox spacing="20" alignment="CENTER" styleClass="status-bar">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>

            <Button text="ðŸš€ Rent Selected Car"
                    onAction="#handleRentCar"
                    styleClass="success-button"
                    style="-fx-font-size: 14px; -fx-pref-height: 40px;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="statusLabel"
                   text="Ready to find your perfect car!"/>
        </HBox>
    </bottom>

</BorderPane>
