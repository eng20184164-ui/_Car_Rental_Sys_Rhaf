      stylesheets="@styles/style.css"
      styleClass="login-container">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="20.0"
          prefWidth="500" prefHeight="500">
        <padding>
