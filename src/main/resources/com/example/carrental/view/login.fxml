                <Tab text="Admin Login" closable="false">
                    <VBox spacing="20" alignment="CENTER">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                        </padding>

                        <VBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Username" styleClass="label-bold"/>
                            <TextField fx:id="adminUsernameField" promptText="Enter username"
                                       style="-fx-pref-width: 300px; -fx-pref-height: 40px;"/>
                        </VBox>

                        <VBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Password" styleClass="label-bold"/>
                            <PasswordField fx:id="adminPasswordField" promptText="Enter password"
                                           style="-fx-pref-width: 300px; -fx-pref-height: 40px;"/>
                        </VBox>

                        <Button text="Login as Admin" onAction="#handleAdminLogin"
                                style="-fx-pref-width: 200px; -fx-pref-height: 35px;"
                                styleClass="primary-button"/>
