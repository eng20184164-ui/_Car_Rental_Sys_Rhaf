        </VBox>

        <!-- Ø¹Ù„Ø§Ù…Ø§Øª Ø§Ù„ØªØ¨ÙˆÙŠØ¨ -->
        <TabPane prefWidth="400" prefHeight="300" styleClass="hover-effect">
            <tabs>
                <Tab text="Customer Login" closable="false">
                    <VBox spacing="20" alignment="CENTER">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                        </padding>

                        <VBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Email Address" styleClass="label-bold"/>
